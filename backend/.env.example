# Grok Chat Backend Environment Variables
# Copy this file to .env and fill in your values

# ============ REQUIRED ============

# Grok API Key (Required)
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# ============ SERVER CONFIGURATION ============

# Node Environment (development, production, test)
NODE_ENV=development

# Server Port
PORT=3000

# ============ DATABASE ============

# PostgreSQL Connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/grok_chat

# Database Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=2

# ============ SECURITY ============

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHAT_RATE_LIMIT_MAX=20
UPLOAD_RATE_LIMIT_MAX=10

# ============ AI CONFIGURATION ============

# Default Temperature (0-2)
DEFAULT_TEMPERATURE=0.7

# ============ LOGGING ============

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ============ ERROR TRACKING (OPTIONAL) ============

# Sentry DSN for Error Tracking (Production only)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============ NOTES ============

# 1. Never commit the .env file to version control
# 2. Make sure .env is in your .gitignore
# 3. Update .env.example when adding new environment variables
# 4. Use strong passwords for production databases
# 5. Keep your API keys secure
